#include <iostream>
#include <cmath>
class Point
{
public:
	void Set(double ix,double iy){
		x = ix;
		y = iy;
	}
	double xOffset(){
		return x;
	}
	double yOffset(){
		return y;
	}
	double angle(){
		return (180/3.14159) * atan2(x,y);
	}
	double radius(){
		return (x * x + y * y);
	}
protected:
	double x;
	double y;
};

int mian()
{
	Point p;

}
