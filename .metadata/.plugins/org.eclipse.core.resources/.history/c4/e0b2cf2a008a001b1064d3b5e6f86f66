#ifndef STUDENT_H_
#define STUDENT_H_

class Student
{
	public:
		float Grade()
		{
			return gpa;
		}
		int Hours()
		{
			return semesHours;
		}
		void AddCourse(int hours,float grade)
		{
			gpa = semesHours * gpa + grade * hours;
			gpa /=semesHours;
			semesHours += hours;
		}
	protected:
		int semesHours;
		float gpa;
};

#endif /* STUDENT_H_ */
